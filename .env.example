# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Usage: cp .env.example .env

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=telegram_bot

# Database Connection Settings
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@localhost:5432/telegram_bot
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook
WEBHOOK_SECRET_TOKEN=your_webhook_secret_token_min_20_chars

# =============================================================================
# OpenAI / LLM Configuration
# =============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# =============================================================================
# Application Configuration
# =============================================================================
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=change-me-in-production-use-strong-secret-key-minimum-32-characters
